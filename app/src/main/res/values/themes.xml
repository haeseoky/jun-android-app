<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with Pastel Design -->
    <style name="Theme.Jun" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_main</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_main</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_light</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Rounded corners for components -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Jun.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Jun.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Jun.LargeComponent</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.Jun.Button</item>
    </style>

    <style name="Theme.Jun.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Jun.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorPrimary">@color/primary_main</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
    </style>

    <style name="Theme.Jun.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    
    <!-- Shape Appearances for Rounded Corners -->
    <style name="ShapeAppearance.Jun.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearance.Jun.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    
    <style name="ShapeAppearance.Jun.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>
    
    <!-- Custom Button Style -->
    <style name="Widget.Jun.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="backgroundTint">@color/primary_main</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.Jun.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/pastel_gradient_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>