<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme with Pastel accents -->
    <style name="Theme.Jun" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_main</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary_main</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        
        <!-- Background colors for dark mode -->
        <item name="android:colorBackground">#FF1A1A1A</item>
        <item name="colorSurface">#FF2D2D2D</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#FF1A1A1A</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Rounded corners for components -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Jun.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Jun.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Jun.LargeComponent</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.Jun.Button.Dark</item>
    </style>
    
    <!-- Dark Button Style -->
    <style name="Widget.Jun.Button.Dark" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_primary</item>
        <item name="backgroundTint">@color/primary_light</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>